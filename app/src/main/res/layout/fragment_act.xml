<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#b0b1b2"
    tools:context=".fragments.ActFragment"
    android:id="@+id/act_frame_mainlayout"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/black"
        android:id="@+id/textview_act"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Daily action page"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"
            android:textColor="#ffff"
            android:textAlignment="center"

            />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:layout_editor_absoluteY="81dp"
        android:id="@+id/act_scrollview">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_gravity="right"
                android:orientation="horizontal">


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Primary Task"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task 1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="4dp" />

            <EditText
                android:id="@+id/actFrament_edittext_pttaskone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Write something here"
                android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
                android:maxLines="5" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Secondary Tasks"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task 2" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="4dp" />

            <EditText
                android:id="@+id/actFrament_edittext_sttasktwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Write something here"
                android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
                android:maxLines="5" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task 3" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="4dp" />

            <EditText
                android:id="@+id/actFrament_edittext_sttaskthree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Write something here"
                android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
                android:maxLines="5" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schedule Tasks (Start time / Duration)"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task 1" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/actFrament_edittext_schttaskonetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:clickable="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Time"
                    android:inputType="time" />

                <Space
                    android:layout_width="4dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="/"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="4dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/actFrament_edittext_schttaskoneduration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="Duration"
                    android:inputType="number" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task 2" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/actFrament_edittext_schttasktwotime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:clickable="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Time"
                    android:inputType="time" />

                <Space
                    android:layout_width="4dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="/"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="4dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/actFrament_edittext_schttasktwoduration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="Duration"
                    android:inputType="number" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task 3" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/actFrament_edittext_schttaskthreetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:clickable="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Time"
                    android:inputType="time" />

                <Space
                    android:layout_width="4dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="/"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="4dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/actFrament_edittext_schttaskthreeduration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="Duration"
                    android:inputType="number" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schedule Visualizations (Start time)"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V1" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/actFrament_edittext_schvonetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:clickable="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Time"
                    android:inputType="time" />

                <Space
                    android:layout_width="4dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V2" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/actFrament_edittext_schvtwotime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:clickable="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Time"
                    android:inputType="time" />

                <Space
                    android:layout_width="4dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V3" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/actFrament_edittext_schvthreetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:clickable="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Time"
                    android:inputType="time" />

            </LinearLayout>

            <Button
                android:id="@+id/actFragment_button_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Done" />


        </LinearLayout>


    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/act_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_white"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="31dp"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/act_fab_addtask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/ic_add_white_24dp"
        android:layout_marginTop="31dp"/>



</FrameLayout>